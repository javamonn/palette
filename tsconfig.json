{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": false,
    "types": [
      "commander",
      "jest",
      "prop-types",
      "react",
      "react-native",
      "react-test-renderer",
      "semver",
      // "styled-components",
      "styled-system"
    ]
  },
  "include": [
    "typings/node.d.ts",
    "node_modules/@types/react-native/index.d.ts",
    "node_modules/@types/styled-components/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules/*", "dist/*"]
}
